{
    "name": "a1-client",
    "version": "0.0.0",
    "main": "main-electron.js",
    "type": "commonjs",
    "scripts": {
        "lint": "eslint --ext .js,.ts,.vue --fix src",
        "format": "prettier .  --write",
        "dev": "vite",
        "build": "vue-tsc --noEmit && vite build",
        "serve": "vite preview",
        "clean": "rm -rf dist-*",
        "electron:start": "electron .",
        "electron:build": "electron-builder build --config electron-builder.json",
        "electron:build:win": "electron-builder build --win --config electron-builder.json",
        "electron:build:linux": "electron-builder build --linux --config electron-builder.json",
        "electron:build:mac": "electron-builder build --mac --config electron-builder.json",
        "test": "jest --coverage",
        "test:watch": "jest --watch"
    },
    "dependencies": {
        "currency.js": "^2.0.4",
        "pouchdb-browser": "^7.2.2",
        "reflect-metadata": "^0.1.13",
        "tsyringe": "^4.6.0",
        "vue": "^3.2.16"
    },
    "devDependencies": {
        "@babel/preset-env": "^7.16.4",
        "@babel/preset-typescript": "^7.16.0",
        "@types/jest": "^27.0.3",
        "@types/node": "15.14.9",
        "@types/pouchdb": "^6.4.0",
        "@typescript-eslint/eslint-plugin": "^5.4.0",
        "@typescript-eslint/parser": "^5.4.0",
        "@vitejs/plugin-vue": "^1.9.3",
        "@vue/eslint-config-typescript": "^9.1.0",
        "electron": "^16.0.1",
        "electron-builder": "^22.13.1",
        "eslint": "^8.2.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-vue": "^8.1.1",
        "jest": "^27.4.3",
        "prettier": "2.4.1",
        "ts-jest": "^27.0.7",
        "typescript": "^4.5.2",
        "vite": "^2.6.4",
        "vue-tsc": "^0.3.0"
    }
}
