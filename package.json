{
    "name": "a1-client",
    "version": "0.0.0",
    "main": "main-electron.js",
    "type": "commonjs",
    "scripts": {
        "lint": "eslint --ext .js,.ts,.vue --fix src",
        "format": "prettier . --write",
        "dev": "cross-env debug=true vite",
        "build": "vue-tsc --noEmit && vite build",
        "serve": "vite preview",
        "clean": "rm -rf dist-* local-* remote-*",
        "precommit": "npm run build && npm run test && npm run format",
        "css:build": "tailwindcss build -i src/styles/index.css -o public/styles.css",
        "electron:dev": "cross-env debug=true electron .",
        "electron:build": "npm run build && electron-builder build --config electron-builder.json",
        "electron:build:win": "npm run build && electron-builder build --win --config electron-builder.json",
        "electron:build:linux": "npm run build && electron-builder build --linux --config electron-builder.json",
        "electron:build:mac": "npm run build && electron-builder build --mac --config electron-builder.json",
        "test": "jest --coverage",
        "test:unit": "jest --coverage",
        "test:watch": "jest --watch",
        "db:populate": "npx ts-node --project ./scripts/database/tsconfig.json -r tsconfig-paths/register ./scripts/database/populate.ts"
    },
    "dependencies": {
        "@heroicons/vue": "^1.0.5",
        "class-transformer": "^0.5.1",
        "dinero.js": "^1.9.1",
        "events": "^3.3.0",
        "pinia": "^2.0.10",
        "pouchdb": "^7.2.2",
        "reflect-metadata": "^0.1.13",
        "tsyringe": "^4.6.0",
        "vue": "^3.2.16",
        "vue-router": "^4.0.12"
    },
    "devDependencies": {
        "@babel/preset-env": "^7.16.4",
        "@babel/preset-typescript": "^7.16.0",
        "@types/dinero.js": "^1.9.0",
        "@types/jest": "^27.0.3",
        "@types/node": "15.14.9",
        "@types/pouchdb": "^6.4.0",
        "@typescript-eslint/eslint-plugin": "^5.4.0",
        "@typescript-eslint/parser": "^5.4.0",
        "@vitejs/plugin-vue": "^1.9.3",
        "@vue/eslint-config-typescript": "^9.1.0",
        "autoprefixer": "^10.4.2",
        "cross-env": "^7.0.3",
        "dotenv": "^16.0.0",
        "electron": "^16.0.1",
        "electron-builder": "^22.13.1",
        "eslint": "^8.2.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-vue": "^8.1.1",
        "jest": "^27.4.3",
        "postcss": "^8.4.5",
        "prettier": "2.4.1",
        "tailwindcss": "^3.0.15",
        "ts-jest": "^27.0.7",
        "tsconfig-paths": "^3.14.0",
        "typescript": "^4.5.2",
        "vite": "^2.6.4",
        "vue-tsc": "^0.31.1"
    }
}
